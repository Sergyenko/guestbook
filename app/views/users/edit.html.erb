<%= stylesheet_link_tag "main.css", :media => "all" %>

 <% form_for @user do |form| %>
<table class="user_profile_table" border="0" cellspacing="0">
<tr>
  <td id="user_profile_name" class="user_profile_lable have_border_bottom pb10">
    <%= @user.name %>
  </td><td class="have_border_bottom pb10">&nbsp;</td>
</tr>
<tr>
  <td class="user_profile_lable have_border_bottom pb10 pt10">Avatar:</td><td class="have_border_bottom pb10 pt10">
    <table border="0" id="user_profile_avatar" class="w100ps" cellspacing="0">
    <tr><td rowspan="2" id="user_profile_avatar_image">
       <%= @user.avatar.url == nil ? "Not loaded" : ( image_tag @user.avatar.url ) %>
     </td>
     <td id="user_profile_avatar_url">url:</td><td>
                <%= text_field_tag :avatar, params[:avatar],
                     :value => (@user.avatar.url == nil ? '' : @user.avatar.url),
                     :class => 'w100ps' %>
     </td></tr>
    <tr><td></td><td id="user_profile_avatar_comment">
       <div>Use free images store to public your avatar.</div>
       <div>Now we support images only from <%= link_to 'www.radikal.ru', 'http://www.radikal.ru/' %></div>
       <div>Resolutions rule: x <= 100, y <= 300 pixels</div>
     </td></tr>
    </table>
  </td>
</tr>

<tr>
  <td class="user_profile_lable pt10">Group:</td><td class="pt10">
    <% if @currentuser.group.id == 1 %>
      <%= form.select :group_id, Group.all.collect {|group| [ group.name, group.id ] },{}, {:class => 'w250px'} %>
    <% else %>
      <%= select :foo,:foo, [@user.group.name] ,{},{:class => 'w250px'}  %>
    <% end %>
  </td>
</tr>

<tr>
  <td class="user_profile_lable">Set password:</td>
  <td>
      <%= text_field_tag :password, params[:password],:class => "w250px" %>
  </td>
</tr>
<tr>
  <td class="user_profile_lable have_border_bottom pb10">Sex:</td><td class="have_border_bottom pb10">
      <%= select :passport, :sex,  ['male','female'],
                 {:include_blank => true,:selected => @user.passport.sex,},
                 {:class => 'w250px'}
      %>
  </td>
</tr>
<tr>
  <td class="user_profile_lable pt10">Name:</td><td class="pt10">
      <%= text_field :passport, :real_name,
                     :value => @user.passport.real_name,
                     :class => 'w300px'
      %>
  </td>
</tr>
<tr>
  <td class="user_profile_lable">Date of birth:</td><td>
      <%= text_field :passport, :date_of_birth,
                     :value => @user.passport.date_of_birth,
                     :class => 'w300px'
      %>
  </td>
</tr>
<tr>
  <td class="user_profile_lable">Profession:</td><td>
      <%= text_field :passport, :profession,
                     :value => @user.passport.profession,
                     :class => 'w300px'%>
  </td>
</tr>
<tr>
  <td class="user_profile_lable">City:</td><td>
      <%= text_field :passport, :city,
                     :value => @user.passport.city,
                     :class => 'w300px'
      %>
  </td>
</tr>
<tr>
  <td class="user_profile_lable have_border_bottom pb10">Country:</td><td class="have_border_bottom pb10">
      <%= text_field :passport, :country,
                     :value => @user.passport.country,
                     :class => 'w300px'
      %>
  </td>
</tr>
<tr>
  <td class="user_profile_lable p10">E-mail:</td><td class="pt10">
      <%= text_field :passport, :email,
                     :value => @user.passport.email,
                     :class => 'w300px'
      %>
  </td>
</tr>
<tr>
  <td class="user_profile_lable">Site:</td><td>
      <%= text_field :passport, :site,
                     :value => @user.passport.site,
                     :class => 'w300px'
      %>
  </td>
</tr>
<tr>
  <td class="user_profile_lable">Skype:</td><td>
      <%= text_field :passport, :skype,
                     :value => @user.passport.skype,
                     :class => 'w300px'
      %>
  </td>
</tr>
<tr>
  <td class="user_profile_lable have_border_bottom pb10">ICQ:</td><td class="have_border_bottom pb10">
      <%= text_field :passport, :icq,
        :value => @user.passport.icq,
        :class => 'w300px'
      %>
  </td>
</tr>
<tr>
  <td class="postbutton pt10">
  <%= form.submit 'update profile' %>
 </td>
 <td class="pt10"><%=  flash[:errors] %></td>
</tr>
</table>
<% end %>
